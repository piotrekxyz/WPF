<UserControl x:Class="MojaKontrolka.Przycisk"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:MojaKontrolka"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800"
			 Name="MojPrzycisk">

	<Button Click="ButtonBase_OnClick" Style="{StaticResource MojPrzyciskStyle}">
		<WrapPanel>
			<Image Source="{Binding ElementName=MojPrzycisk, Path=ImageSource}"/>
			<TextBlock Text="{Binding ElementName=MojPrzycisk, Path=Text}"/>
		</WrapPanel>
	</Button>

</UserControl>
